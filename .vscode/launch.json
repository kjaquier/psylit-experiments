    "version": "0.2.0",
    "configurations": [

        {
            "name": "Process data (dev)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\data_process.py",
            "console": "integratedTerminal",
            "args": [
                "-x",
                "-r", "greatex_10k", 
                "data\\interim", 
                "data\\processed"
            ]
        },
        {
            "name": "Prepare data (dev, all)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\data_prepare.py",
            "console": "integratedTerminal",
            "args": [
                "-x", 
                "-r", "dev_all", 
                "data\\raw\\corpus-small\\*.txt",
                "data\\interim"
            ]
        },
        {
            "name": "Prepare data (real)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\data_prepare.py",
            "console": "integratedTerminal",
            "args": [
                "-x", 
                "-r", "greatex_full", 
                "data\\raw\\EN_1861_Dickens,Charles_GreatExpectations_Novel.txt",
                "data\\interim"
            ]
        },
        {
            "name": "Prepare data (dev)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\data_prepare.py",
            "console": "integratedTerminal",
            "args": [
                "-fx",  
                "-t1", "10_000",
                "-r", "greatex_10k", 
                "data\\raw\\EN_1861_Dickens,Charles_GreatExpectations_Novel.txt",
                "data\\interim"
            ]
        }
    ]
}